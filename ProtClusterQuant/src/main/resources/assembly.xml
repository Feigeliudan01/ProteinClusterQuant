<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <formats>
        <format>zip</format>
    </formats>

    

    <includeBaseDirectory>false</includeBaseDirectory>


    <fileSets>

        <fileSet>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>

		<fileSet>
			<directory>example_dataset</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>${assembly.output.folder}/example_dataset</outputDirectory>
		</fileSet>
        <fileSet>
        	<directory></directory>
            <includes>
                <include>setup.properties</include>
                <include>network_comparison_input_file.txt</include>
            </includes>
            <outputDirectory>${assembly.output.folder}</outputDirectory>
        </fileSet>
        
        
    </fileSets>


    <dependencySets>
        <dependencySet>
            <outputDirectory>${assembly.output.folder}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>